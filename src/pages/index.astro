---
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';

const allPosts = await getCollection('blog');
const sortedPosts = allPosts.sort((a, b) => {
  const dateA = new Date(a.data.pubDate);
  const dateB = new Date(b.data.pubDate);
  return dateB.getTime() - dateA.getTime();
});
---

<Layout title="Adorable Axis - „Éñ„É≠„Ç∞">
  <div class="blog-header">
    <div class="container">
      <h1>„Éñ„É≠„Ç∞Ë®ò‰∫ã‰∏ÄË¶ß</h1>
      <p class="subtitle">ÂÖ® {allPosts.length} ‰ª∂„ÅÆË®ò‰∫ã</p>
    </div>
  </div>

  <main class="blog-main">
    <div class="container">
      <div class="posts">
        {sortedPosts.map((post) => (
          <article class="post-card">
            <div class="post-card-content">
              <div class="post-header">
                <h2>
                  <a href={`/blog/${post.id}/`}>{post.data.title}</a>
                </h2>
              </div>
              <div class="post-meta">
                <time datetime={post.data.pubDate}>
                  <span class="calendar-icon">üìÖ</span>
                  {new Date(post.data.pubDate).toLocaleDateString('ja-JP')}
                </time>
              </div>
              {post.data.tags && post.data.tags.length > 0 && (
                <div class="tags">
                  {post.data.tags.map((tag) => (
                    <span class="tag">{tag}</span>
                  ))}
                </div>
              )}
            </div>
            <div class="post-arrow">‚Üí</div>
          </article>
        ))}
      </div>
    </div>
  </main>
</Layout>

<style>
  .blog-header {
    background: linear-gradient(135deg, #1a1a2e 0%, #0f3460 50%, #16213e 100%);
    color: white;
    padding: 3rem 1rem;
    position: relative;
    overflow: hidden;
  }

  .blog-header::before {
    content: '';
    position: absolute;
    top: -20%;
    right: -15%;
    width: 50%;
    height: 150%;
    background: radial-gradient(circle, rgba(0, 212, 255, 0.08) 0%, transparent 70%);
    pointer-events: none;
  }

  .blog-header h1 {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
    position: relative;
    z-index: 1;
  }

  .subtitle {
    color: rgba(255, 255, 255, 0.8);
    margin-bottom: 0;
    font-size: 1.1rem;
    position: relative;
    z-index: 1;
  }

  .blog-main {
    padding: 4rem 1rem;
    background: #ffffff;
    min-height: calc(100vh - 300px);
  }

  .container {
    max-width: 900px;
    margin: 0 auto;
  }

  .posts {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .post-card {
    padding: 1.75rem;
    border: 1px solid #e5e7eb;
    border-radius: 12px;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    display: flex;
    align-items: center;
    justify-content: space-between;
    position: relative;
    overflow: hidden;
    background: white;
  }

  .post-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 2px;
    background: linear-gradient(90deg, #00d4ff 0%, #7c3aed 100%);
    transform: scaleX(0);
    transform-origin: left;
    transition: transform 0.3s ease;
  }

  .post-card:hover {
    border-color: #3245ff;
    box-shadow: 0 8px 24px rgba(50, 69, 255, 0.12);
    transform: translateX(4px);
  }

  .post-card:hover::before {
    transform: scaleX(1);
  }

  .post-card-content {
    flex: 1;
  }

  .post-header h2 {
    margin: 0 0 0.75rem;
    font-size: 1.35rem;
    line-height: 1.5;
  }

  .post-card a {
    color: #1f2937;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .post-card a:hover {
    color: #3245ff;
  }

  .post-meta {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: #6b7280;
    font-size: 0.95rem;
    margin-bottom: 0.75rem;
  }

  .calendar-icon {
    margin-right: 0.25rem;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-top: 1rem;
  }

  .tag {
    display: inline-block;
    background: linear-gradient(135deg, #f0f9ff 0%, #faf5ff 100%);
    color: #3245ff;
    padding: 0.375rem 0.875rem;
    border-radius: 16px;
    font-size: 0.85rem;
    font-weight: 500;
    border: 1px solid rgba(50, 69, 255, 0.15);
    transition: all 0.3s ease;
  }

  .tag:hover {
    background: #3245ff;
    color: white;
    border-color: #3245ff;
  }

  .post-arrow {
    color: #d1d5db;
    font-size: 1.5rem;
    font-weight: 300;
    margin-left: 1rem;
    transition: all 0.3s ease;
    opacity: 0;
  }

  .post-card:hover .post-arrow {
    color: #3245ff;
    opacity: 1;
    transform: translateX(4px);
  }

  @media (max-width: 768px) {
    .blog-header {
      padding: 2rem 1rem;
    }

    .blog-header h1 {
      font-size: 2rem;
    }

    .blog-main {
      padding: 2rem 1rem;
    }

    .post-card {
      flex-direction: column;
      align-items: flex-start;
    }

    .post-arrow {
      display: none;
    }

    .post-header h2 {
      font-size: 1.1rem;
    }

    .posts {
      gap: 1rem;
    }
  }
</style>
